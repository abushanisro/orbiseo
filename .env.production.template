# Database (if needed)
DATABASE_URL=

# Application Settings
PROJECT_NAME=OrbiSEO Production
VERSION=1.0.0
API_V1_STR=/api/v1



# Security Settings
SSL_CERT_PATH=/etc/ssl/certs/o
SSL_KEY_PATH=/etc/ssl/private/

# Monitoring
SENTRY_DSN=
ANALYTICS_ID=

